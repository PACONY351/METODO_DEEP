    <script>
        // Script para manejar el estado de las tareas
        document.addEventListener('DOMContentLoaded', function() {
            // Manejar checkboxes de tareas
            const checkboxes = document.querySelectorAll('.task-checkbox, .form-check-input');
            
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const label = this.nextElementSibling;
                    if (this.checked) {
                        label.classList.add('completed');
                    } else {
                        label.classList.remove('completed');
                    }
                    updateProgress();
                });
            });
            
            // Funci√≥n para actualizar la barra de progreso
            function updateProgress() {
                const totalTasks = document.querySelectorAll('.task-checkbox, .form-check-input').length;
                const completedTasks = document.querySelectorAll('.task-checkbox:checked, .form-check-input:checked').length;
                const progress = Math.round((completedTasks / totalTasks) * 100);
                
                const progressBar = document.querySelector('.progress-bar');
                progressBar.style.width = progress + '%';
                progressBar.setAttribute('aria-valuenow', progress);
                progressBar.textContent = progress + '%';
            }
            
            // Bot√≥n para copiar c√≥digo
            document.querySelectorAll('.btn-outline-primary').forEach(btn => {
                btn.addEventListener('click', function() {
                    const codeBlock = this.previousElementSibling;
                    navigator.clipboard.writeText(codeBlock.textContent.trim())
                        .then(() => {
                            const originalText = this.innerHTML;
                            this.innerHTML = '<i class="fas fa-check me-1"></i>Copiado!';
                            setTimeout(() => {
                                this.innerHTML = originalText;
                            }, 2000);
                        });
                });
            });
        });
    </script>
